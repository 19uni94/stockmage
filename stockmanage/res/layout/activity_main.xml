<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
    
    <ListView
        android:id="@+id/listView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"         
        android:color="#FFFFFF">
    </ListView>

    <Button
        android:id="@+id/ btn_qr"
        android:layout_width="100dip"
        android:layout_height="80dip"
        android:layout_alignBaseline="@+id/btn_upd"
        android:layout_alignBottom="@+id/btn_upd"
        android:layout_alignParentRight="true"
        android:layout_marginRight="28dp"
        android:background="@drawable/qrcode" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="100dip"
        android:layout_height="80dip"
        android:layout_alignBaseline="@+id/btn_add"
        android:layout_alignBottom="@+id/btn_add"
        android:layout_alignLeft="@+id/ btn_qr"
        android:background="@drawable/delete" />

    <Button
        android:id="@+id/btn_upd"
        android:layout_width="100dip"
        android:layout_height="80dip"
        android:layout_below="@+id/btn_add"
        android:layout_marginRight="28dp"
        android:layout_marginTop="45dp"
        android:layout_toLeftOf="@+id/ btn_qr"
        android:background="@drawable/update" />

    <Button
        android:id="@+id/btn_select"
        android:layout_width="100dip"
        android:layout_height="80dip"
        android:layout_above="@+id/btn_delete"
        android:layout_marginBottom="46dp"
        android:layout_toRightOf="@+id/btn_upd"
        android:background="@drawable/search" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="100dip"
        android:layout_height="80dip"
        android:layout_alignLeft="@+id/btn_upd"
        android:layout_centerVertical="true"
        android:background="@drawable/additem" />

    <Button
        android:id="@+id/btn_all"
        android:layout_width="100dip"
        android:layout_height="80dip"
        android:layout_alignBaseline="@+id/btn_select"
        android:layout_alignBottom="@+id/btn_select"
        android:layout_alignLeft="@+id/btn_add"
        android:background="@drawable/allitem" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btn_select"
        android:background="@drawable/stop" />

</RelativeLayout>